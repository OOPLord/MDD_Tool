@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<script src="https://cdn.jsdelivr.net/npm/mermaid/dist/mermaid.min.js"></script>

<style>
    label {
        align-content: center;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 20px;
        font-style: italic;
        font-weight: bold;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Draw your class diagram</h1>
</div>

<div class="container">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="pseudocode_text_area" class="control-label text">Enter your Class diagram layout:</label>
            <textarea name="mermaidPseudocode" id="pseudocode_text_area" rows="10" class="form-control">
classDiagram
                class Animal{
                +int age
                +String gender
                +isMammal()
                +mate()
                }
                class Duck{
                  +String beakColor
                  +swim()
                  +quack()
                }
                class Fish{
                  -int sizeInFeet
                  -canEat()
                }
                class Zebra{
                  +bool is_wild
                  +run()
                }

                Animal --|> Duck
                Animal <|-- Fish
                Animal <|-- Zebra
</textarea>
            <span style="color:red;"></span>
        </div>

        <div class="col-md-6">
            <label for="mermaid_preview" class="control-label text">Preview Class diagram:</label>
            <div id="mermaid_preview" name="mermaidRenderer" class="mermaid">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <label for="code_output" class="control-label">C# code generator:</label>
            <textarea id="code_output" name="codeGeneratorOutput" readonly rows="25" class="form-control"></textarea>
        </div>
    </div>
</div>

<script src="~/js/MermaidRender.js"></script>
